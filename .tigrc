set line-graphics = utf-8       # グラフ描画時の種別
set tab-size = 8                # TAB 文字の表示幅
set ignore-space = all          # 空白無視
set split-view-width = 75%      # 垂直分割時の比率
set split-view-height = 80%      # 垂直分割時の比率
set diff-context = 6
set main-view = id date author commit-title:graph=yes,refs=yes
color diff-header default magenta
color diff-chunk black white
# 画面を垂直方向に分割する
set vertical-split = no
# Override the default terminal colors to white on black.
color default		white	black
# Diff colors
color diff-header	yellow	default
color diff-index	blue	default
color diff-chunk	magenta	default
color date yellow default
color "Reported-by:"	green	default
# View-specific color
color tree.date		black	cyan bold
bind main D !sh -c "git difftool %(commit)~ %(commit)"
bind refs D !sh -c "git difftool %(branch)"
